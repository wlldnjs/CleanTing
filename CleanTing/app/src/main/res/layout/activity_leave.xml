<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="sopt.client.cleanting.Mypage.LeaveActivity">

    <LinearLayout
        android:layout_marginTop="25dp"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="탈퇴하기"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:textSize="17dp"
            android:textColor="#333333"
            android:text="서비스를 탈퇴하시겠습니까?"
            android:layout_gravity="left"
            android:layout_marginTop="80dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        
        <TextView
            android:textColor="#999999"
            android:layout_marginTop="60dp"
            android:layout_gravity="left"
            android:textSize="15dp"
            android:text="탈퇴하시면 고객의 정보가 삭제되고\n복구 할 수 없습니다."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <ImageView
        android:layout_marginBottom="44dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:onClick="onclick_leave"
        android:id="@+id/leave_btn"
        android:background="@drawable/taltuae"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="194dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>
