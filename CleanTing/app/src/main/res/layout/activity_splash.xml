<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="sopt.client.cleanting.Main.SplashActivity">

        <ImageView
            android:id="@+id/house"
            android:src="@drawable/ggiipp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="150dp"
            android:layout_width="130dp"
            android:layout_height="130dp" />
        <ImageView
            android:id="@+id/water"
            android:src="@drawable/ppallae"
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:layout_alignTop="@+id/house"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="81dp" />

    <ImageView

        android:layout_centerHorizontal="true"
        android:layout_below="@+id/house"
        android:src="@drawable/splash_bottom_text"
        android:layout_width="110dp"
        android:layout_height="50dp" />

</RelativeLayout>
