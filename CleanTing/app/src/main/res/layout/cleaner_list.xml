<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_marginTop="10sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/List_cleanerimg"
            android:src="@drawable/picture_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/List_cleanername"
            android:layout_toRightOf="@+id/List_cleanerimg"
            android:layout_alignTop="@+id/List_cleanerimg"
            android:text="name"
            android:layout_marginLeft="10sp"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_marginLeft="10sp"
            android:layout_centerInParent="true"
            android:layout_toRightOf="@+id/List_cleanerimg"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/List_cleanerhistory"
                android:textSize="15sp"
                android:text="청소 이력 : "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/List_cleanercomment"
                android:textSize="15sp"
                android:layout_marginLeft="50sp"
                android:text="후기: "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <ImageView
            android:id="@+id/List_clenaerstar"
            android:layout_toRightOf="@+id/List_cleanerimg"
            android:layout_marginLeft="10sp"
            android:layout_alignBottom="@+id/List_cleanerimg"
            android:src="@drawable/star"
            android:layout_width="wrap_content"
            android:layout_height="30sp" />

    </RelativeLayout>
    <View
        android:layout_marginTop="15sp"
        android:alpha="0.5"
        android:layout_width="match_parent"
        android:layout_height="1.2dp"
        android:layout_centerInParent="true"
        android:background="#000000"/>

</LinearLayout>