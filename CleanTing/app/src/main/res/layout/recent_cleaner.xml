<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_gravity="center"
    android:gravity="center"
    android:layout_marginRight="35dp"
    android:layout_height="wrap_content">

    <ImageView
        android:src="@drawable/cleaner_circle"
        android:id="@+id/R_cleanerimg"
        android:layout_width="80dp"
        android:layout_height="80dp" />
    <TextView
        android:layout_marginTop="6dp"
        android:text="박청소"
        android:textColor="#333333"
        android:textSize="13sp"
        android:id="@+id/R_cleanername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_marginTop="6dp"
        android:id="@+id/R_date"
        android:text="9월 12일"
        android:textSize="11sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_marginTop="6dp"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:src="@drawable/star"
            android:id="@+id/R_starrate1"
            android:layout_width="20dp"
            android:layout_height="20dp" />
        <ImageView
            android:src="@drawable/star"
            android:id="@+id/R_starrate2"
            android:layout_width="20dp"
            android:layout_height="20dp" />
        <ImageView
            android:src="@drawable/star"
            android:id="@+id/R_starrate3"
            android:layout_width="20dp"
            android:layout_height="20dp" />
        <ImageView
            android:src="@drawable/star"
            android:id="@+id/R_starrate4"
            android:layout_width="20dp"
            android:layout_height="20dp" />
        <ImageView
            android:src="@drawable/star"
            android:id="@+id/R_starrate5"
            android:layout_width="20dp"
            android:layout_height="20dp" />
    </LinearLayout>
</LinearLayout>