<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item>
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#ffffff" /> <!-- 배경 -->
                    <corners android:radius="15dp" />
                    <stroke android:width="1.5dip" android:color="#f3d458" /> <!-- 외각선 -->
                </shape>
            </item>
            <!-- 회살표를 넣기위해-->
            <item android:left="65dp" android:top="2dp" android:right="5dp" android:bottom="2dp">
                <bitmap android:src="@drawable/spinner_down_arrow" android:gravity="center_vertical|right" />
            </item>
        </layer-list>
    </item>
</selector>